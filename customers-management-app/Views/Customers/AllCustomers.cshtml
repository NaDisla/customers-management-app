@model IEnumerable<customers_management_app.Models.Customers>

@{
    ViewData["Title"] = "Customers";
}

<h1>Company's Customers</h1>
<br/>

<p>
    <a asp-action="CreateCustomer" class="btn btn-success">Create new customer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustPhone)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCustomer", new { id = item.CustID }, new {@class="btn btn-info"})
                @Html.ActionLink("Details", "CustomerDetails", new { id = item.CustID }, new {@class="btn btn-dark"})
                @Html.ActionLink("Add address", "AddAddress", new { cust = item.CustID}, new {@class="btn btn-primary"})
            </td>
        </tr>
}
    </tbody>
</table>

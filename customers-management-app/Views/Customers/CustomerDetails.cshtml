@model customers_management_app.Models.ViewModels.CustomersViewModelDetail

@{
    ViewData["Title"] = "CustomerDetails";
}

<h1>Customer Details</h1>

<div>
    <h4>Customer Info</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Cuustomer ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustID)
        </dd>
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustFirstName)
        </dd>
        <dt class = "col-sm-2">
            Last Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustLastName)
        </dd>
        <dt class = "col-sm-2">
            Phone
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustPhone)
        </dd>
    </dl>
    <hr style="height:2px; border-width:0; color:darkblue; background-color:darkblue">
    <h4>Customer Addresses</h4>
    <dl class="row">
        @foreach (var address in Model.Addresses)
        {
            <dt class="col-sm-2">
                Address ID
            </dt>
            <dd class="col-sm-10">
                @address.AddrsID
            </dd>
            <dt class="col-sm-2">
                Neighborhood
            </dt>
            <dd class="col-sm-10">
                @address.NghbID
            </dd>
            <dt class="col-sm-2">
                Street 1
            </dt>
            <dd class="col-sm-10">
                @address.AddrsStreet1
            </dd>
            <dt class="col-sm-2">
                Street 2
            </dt>
            <dd class="col-sm-10">
                @address.AddrsStreet2
            </dd>
            <dt class="col-sm-2">
                Country
            </dt>
            <dd class="col-sm-10">
                @address.AddrsCountry
            </dd>
            <hr style="height:20px;" />
        }
    </dl>
</div>
<div>
    <a asp-action="AllCustomers" class="btn btn-info">Back to List</a>
</div>
